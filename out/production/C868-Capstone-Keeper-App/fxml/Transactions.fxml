<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.TransactionsController">
   <children>
      <VBox prefHeight="600.0" prefWidth="850.0">
         <children>
            <HBox prefHeight="43.0" prefWidth="850.0">
               <children>
                  <Label prefHeight="37.0" prefWidth="110.0" text="All Accounts:" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Copperplate" size="13.0" />
                     </font></Label>
                  <Label prefHeight="37.0" prefWidth="98.0" text="\$$$$$$$$$$" textFill="WHITE">
                     <font>
                        <Font name="Copperplate" size="14.0" />
                     </font></Label>
                  <HBox alignment="CENTER_RIGHT" prefHeight="37.0" prefWidth="641.0">
                     <children>
                        <Button mnemonicParsing="false" text="Edit Transaction">
                           <font>
                              <Font name="Copperplate" size="13.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#addTransactionClick" text="Add Transaction">
                           <HBox.margin>
                              <Insets left="5.0" right="5.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Copperplate" size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <TableView prefHeight="540.0" prefWidth="850.0" style="-fx-border-color: #55efc4; -fx-background-color: #434447;">
              <columns>
                  <TableColumn prefWidth="146.0" text="Date" />
                <TableColumn prefWidth="161.0" text="Account" />
                <TableColumn prefWidth="218.0" text="Transaction Description" />
                  <TableColumn prefWidth="159.0" text="Transaction Amount" />
                  <TableColumn prefWidth="135.0" text="Category" />
              </columns>
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
