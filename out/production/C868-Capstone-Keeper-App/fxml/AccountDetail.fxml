<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="500.0" style="-fx-background-color: #434447; -fx-border-color: #55efc4;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.AccountDetailController">
   <children>
      <VBox layoutX="-1.0" layoutY="-1.0" prefHeight="450.0" prefWidth="500.0">
         <children>
            <Label alignment="CENTER" prefHeight="36.0" prefWidth="500.0" text="Add an Account" textFill="WHITE">
               <font>
                  <Font name="Copperplate" size="17.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="46.0" prefHeight="40.0" prefWidth="500.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="266.0" text="Account" textFill="WHITE">
                     <font>
                        <Font name="Copperplate" size="16.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="accountsCb" prefHeight="27.0" prefWidth="187.0" promptText="Select an Account" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="500.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="266.0" text="Account Type" textFill="WHITE">
                     <font>
                        <Font name="Copperplate" size="16.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="accountTypeCb" prefHeight="27.0" prefWidth="202.0" promptText="Select an Account Type" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="46.0" prefHeight="40.0" prefWidth="500.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="259.0" text="Account Name" textFill="WHITE">
                     <font>
                        <Font name="Copperplate" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="accountNameTf" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="86.0" prefHeight="40.0" prefWidth="500.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="259.0" text="Account ID" textFill="WHITE">
                     <font>
                        <Font name="Copperplate" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="accountIdTf" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="126.0" prefHeight="21.0" prefWidth="500.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="475.0" text="Description" textFill="WHITE">
                     <font>
                        <Font name="Copperplate" size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextArea fx:id="descriptionTa" prefHeight="68.0" prefWidth="480.0" promptText="Enter a description">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </TextArea>
            <HBox alignment="CENTER" prefHeight="68.0" prefWidth="500.0">
               <children>
                  <CheckBox fx:id="archiveAccountCheck" mnemonicParsing="false" text="Archive Account" textFill="WHITE">
                     <font>
                        <Font name="Copperplate" size="16.0" />
                     </font>
                  </CheckBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="81.0" prefWidth="500.0">
               <children>
                  <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveClick" text="Save">
                     <font>
                        <Font name="Copperplate" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#cancel" text="Cancel">
                     <font>
                        <Font name="Copperplate" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
